<h1>Login</h1>
<div class="login-form">
  <%= form_tag sessions_create_path  do %>
    <div class="form-group">
      <%= text_field_tag(:email, nil, placeholder: "Your Email") %>
    </div>

    <div class="form-group">
      <%= password_field_tag(:password, nil ,placeholder: "Your Password") %>
    </div>

    <div class="form-group">
      <%= submit_tag 'Login', class: 'btn btn-block btn-info' %>
    </div>  
  <% end %>
  <%= hello() %>
</div>